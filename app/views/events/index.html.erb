<h1>Voici la liste de tous les évènements</h1>
<div><h2>Voici la liste des événements à venir</h2></div>
<br>

<div>
  <div class="card-columns">
    <!-- APPELLE DE CHAQUE ELEMENT DU TABLEAU EVENT -->
    <% @event.sort.each do |event| %>

    <!-- link_to POUR QUE TOUTE LA CARTE DEVIENNE UN LIEN -->
      <%= link_to event_path(event) do%>

      <div class="card border-primary mb-3 bg-light" style="max-width: 20rem;">
        <div class="card-body">

    <!-- AFFICHAGE DU TITRE, LIÉ À SA PAGE show -->
          <h2 class="card-title text-dark">  <%= event.title%></h2>

    <!-- AFFICHAGE DE LA DESCRIPTION DE L'EVENT -->
          <h5 class="card-text text-success">    <%= event.description %></h5>
        </div>
      </div>
    <%end%>
    <% end %>
  </div>
</div>