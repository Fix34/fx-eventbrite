<h1 class="h3 mb-3 font-weight-normal text-center">Crée ton évènement !</h1>
<div class="container">
<div class="row">
<div class="col-md-6 offset-md-3">
<%= form_tag url_for(action: 'create'), method: "post" do %>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <div class="form-group">
  <%= label_tag 'Title' %>
  <%= text_field_tag 'event_title', @event.title, class: "form-control" %>
  </div>
  <br />
  <%= label_tag 'Description' %>
  <%= text_area_tag 'event_description', @event.description, class: "form-control" %>
  <br />
  <%= label_tag "Date de l'Event" %>
  <%= date_field_tag 'event_start_date', @event.start_date, class: "form-control" %>
  <br />
  <%= label_tag "Durée" %>
  <%= text_field_tag 'event_duration', @event.duration, class: "form-control" %>
  <br />
  <%= label_tag "Prix" %>
  <%= text_field_tag 'event_price', @event.price, class: "form-control" %>
  <br />
  <%= label_tag "Lieu" %>
  <%= text_field_tag 'event_location', @event.location, class: "form-control" %>
  <br />



  <%= submit_tag "Create Event", class: "btn btn-lg btn-primary btn-block" %>
<% end %>
</div>
</div>
</div>